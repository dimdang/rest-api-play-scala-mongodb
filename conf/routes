# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# User controller showing
GET     /api/users                  controllers.rest.UserRController.getAllUsers
GET     /api/user/:id               controllers.rest.UserRController.getUser(id: String)
POST    /api/user                   controllers.rest.UserRController.insertUser
DELETE  /api/user/:id               controllers.rest.UserRController.deleteUser(id: String)
PATCH   /api/user/:id               controllers.rest.UserRController.updateUser(id: String)
